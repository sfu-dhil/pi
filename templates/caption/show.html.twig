{% extends 'base.html.twig' %}

{% set title = 'Caption for ' ~ caption.video %}

{% block title %}
{{ title }}
{% endblock %}

{% block pageheader %} 
<h1>{{ title }}
{% if caption.language %}
({{ caption.language }})
{% endif %}
</h1>
    {% if caption.video.captionsDownloadable is not null and caption.video.captionsDownloadable == false  %}
        <div class="alert alert-danger">
            Captions for this video exist, but their contents are not available to download.
        </div>
    {% endif %}
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('caption_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Youtubeid</th>
                <td>{{ caption.youtubeId }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>
                    <a href="{{ path('video_show', {'id': caption.video.id}) }}">{{ caption.video }}</a>
                </td>
            </tr>
            <tr>
                <th>Etag</th>
                <td>{{ caption.etag }}</td>
            </tr>
            <tr>
                <th>Lastupdated</th>
                <td>{% if caption.lastUpdated %}{{ caption.lastUpdated|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Trackkind</th>
                <td>{{ caption.trackKind }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ caption.language }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ caption.name }}</td>
            </tr>
            <tr>
                <th>Audiotracktype</th>
                <td>{{ caption.audioTrackType }}</td>
            </tr>
            <tr>
                <th>Iscc</th>
                <td>{% if caption.isCC %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Isdraft</th>
                <td>{% if caption.isDraft %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Isautosynced</th>
                <td>{% if caption.isAutoSynced %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>
                    {{ caption.content|nl2br }}
                </td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if caption.created %}{{ caption.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if caption.updated %}{{ caption.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
