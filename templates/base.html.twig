<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="google" content="notranslate" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset('favicon.ico') }}"/>
        <link rel="stylesheet" href="{{ asset('node_modules/bootstrap3/dist/css/bootstrap.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset('node_modules/bootstrap3/dist/css/bootstrap-theme.min.css') }}"/>

        <link rel="stylesheet" href="{{ asset('css/base.css') }}"/>

        <script src="{{ asset('node_modules/jquery/dist/jquery.min.js') }}"></script>

        <script src="{{ asset('node_modules/select2/dist/js/select2.full.min.js') }}"></script>
        <link href="{{ asset('node_modules/select2/dist/css/select2.min.css') }}" rel="stylesheet">
        <link href="{{ asset('node_modules/select2-bootstrap-css/select2-bootstrap.min.css') }}" rel="stylesheet">

        <script src="{{ asset('bundles/tetranzselect2entity/js/select2entity.js') }}"></script>
        <script src="{{ asset('node_modules/symfony-collection/jquery.collection.js') }}"></script>
            <script src="{{ asset('node_modules/vanilla-lazyload/dist/lazyload.min.js') }}"></script>
            <script src= "{{ asset('js/pi.js') }}"></script>
        <script src="{{ asset('js/form.js') }}"></script>
        {% block styles %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    {{ knp_menu_render('main') }}

                    {{ knp_menu_render('nines_user_nav') }}
                </div><!--/.nav-collapse -->
            </div>
        </nav>
        {% block hero %} {%endblock%}

        <div class="main container {% block mainclass %}{%endblock%}">

            {% if block('pageheader') is defined %}
                <div class="page-header">
                    {{ block('pageheader') }}
                </div>
            {% endif %}

            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }}">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}
            {% endblock %}
        </div>

        <footer class="footer">
            <div class="container">
                <div id="footer_links">
                    {{ knp_menu_render('main') }}

                </div>

                <div id="footer_imgs">
                    <a href="https://www.lib.sfu.ca/help/publish/dh/dhil">
                        <img class="dhilLogo" src="{{ asset('images/DHIL-Logo-Horizontal.png') }}" alt="Built by the DHIL"/>
                    </a>
   <!--                 <a href="https://www.sshrc-crsh.gc.ca/">
                        <img src="../resources/images/sshrc-inverse.jpg" alt="Research supported by SSHRC"/>
                    </a>-->
                </div>

            </div>

        </footer>

        <script src="{{ asset('node_modules/bootstrap3/dist/js/bootstrap.min.js') }}"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
