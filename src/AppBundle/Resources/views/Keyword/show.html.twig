{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Keyword</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('keyword_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Keyword</th>
                <td>{{ keyword.label }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if keyword.created %}{{ keyword.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if keyword.updated %}{{ keyword.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <h2>Videos</h2>
    {% if keyword.videos %}
        <ul>
            {% for video in keyword.videos %}
                <li><a href="{{ path('video_show', {'id': video.id}) }}">{{ video }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}

{% endblock %}
