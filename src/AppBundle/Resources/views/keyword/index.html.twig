{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Keyword List</h1>
    <p class="count">
        Displaying {{ keywords|length }} keywords of {{ keywords.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('keyword_download') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-download"></span> Keywords
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Label</th>
                <th>Created</th>
                <th>Updated</th>           
            </tr>
        </thead>
        <tbody>
        {% for keyword in keywords %}
            <tr>
                <td>
                    <a href="{{ path('keyword_show', { 'id': keyword.id }) }}">
                        {{ keyword.name }}
                    </a>
                </td>
                <td>
                        {{ keyword.label}}
                </td>                
                <td>
                        {{ keyword.created|date }}
                </td>
                <td>{% if keyword.updated %}{{ keyword.updated|date }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(keywords) }}
    </div>

{% endblock %}
