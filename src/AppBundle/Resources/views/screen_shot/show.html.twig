{% extends 'base.html.twig' %}

{% block title %}ScreenShot{% endblock %}

 {% block pageheader %}
     <h1>ScreenShot Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('screen_shot_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('screen_shot_edit', { 'id': screenShot.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('screen_shot_delete', { 'id': screenShot.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this ScreenShot?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>

    <a href="{{ asset('images/caps/' ~ screenShot.imageFilePath) }}" target="_blank">
        <img src="{{ asset('images/caps/' ~ screenShot.thumbnailPath) }}" />
    </a>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Original Name</th>
                <td>{{ screenShot.originalName }}</td>
            </tr>
            <tr>
                <th>Image File Path</th>
                <td>{{ screenShot.imageFilePath }}</td>
            </tr>
            <tr>
                <th>Thumbnail Path</th>
                <td>{{ screenShot.thumbnailPath }}</td>
            </tr>
            <tr>
                <th>Image Size</th>
                <td>{{ screenShot.imageSize }}</td>
            </tr>
            <tr>
                <th>Image Width</th>
                <td>{{ screenShot.imageWidth }}</td>
            </tr>
            <tr>
                <th>Image Height</th>
                <td>{{ screenShot.imageHeight }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if screenShot.created %}{{ screenShot.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if screenShot.updated %}{{ screenShot.updated|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>
                    <a href="{{ path('video_show', { 'id': screenShot.video.id}) }}">
                        {{ screenShot.video }}
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
